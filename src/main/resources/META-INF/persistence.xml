<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">
    <persistence-unit name="my-persistence-unit" transaction-type="RESOURCE_LOCAL">
        <!-- ✅ МЕНЯЕМ ПРОВАЙДЕРА НА HIBERNATE -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.itmo.model.MusicBand</class>
        <class>org.itmo.model.Coordinates</class>
        <class>org.itmo.model.Album</class>
        <class>org.itmo.model.Studio</class>
        <class>org.itmo.model.MusicGenre</class>
        <class>org.itmo.model.ImportHistory</class>
        <class>org.itmo.model.User</class>
        <class>org.itmo.config.UserRoleConverter</class>

        <properties>
            <!-- ✅ JDBC свойства оставляем, чтобы их мог прочитать DefaultPersistenceUnitManager в PersistenceConfig -->
            <property name="jakarta.persistence.jdbc.password" value="UVos.8847"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/studs"/>
            <property name="jakarta.persistence.jdbc.user" value="s381032"/>

            <!-- ✅ Добавляем свойство Hibernate Dialect в persistence.xml (хотя оно есть и в PersistenceConfig) -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <property name="hibernate.cache.use_second_level_cache" value="true"/>

            <property name="hibernate.generate_statistics" value="true"/>

        </properties>
    </persistence-unit>
</persistence>